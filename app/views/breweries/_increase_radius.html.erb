<%= form_for Brewery.new, remote: true do |f| %>
  <%= f.hidden_field :latitude %>
  <%= f.hidden_field :longitude %>
  <%= f.radio_button :search_distance, '25', :checked => true %> 25
  <%= f.radio_button :search_distance, '50' %> 50
  <%= f.radio_button :search_distance, '100' %> 100
<%= f.submit 'Search Again' %>
<% end %>
